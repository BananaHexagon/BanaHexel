{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "BanaHexel",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "window": {
                "all": true,
                "maximize": true,
                "minimize": true,
                "hide": true,
                "close": true,
                "startDragging": true,
                "show": true,
                "unmaximize": true,
                "unminimize": true
            },
            "dialog": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "BanaHexel",
                "width": 800,
                "height": 600,
                "decorations": false,
                "minWidth": 680,
                "minHeight": 360
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.g-banana-k.banahexel",
            "publisher": "BananaHexagon",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}